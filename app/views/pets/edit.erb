<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br>
  <label>Owner:  </label>
  <% @owners.each do |owner| %>
    <input type="radio" name="owner[id]" id="<%= owner.id %>" value="<%= owner.id %>"
      <% if owner.id == @pet.owner_id%>
       <%= "checked" %> 
      <% end %>>
    <label for="owner[id]"><%= owner.name %></label>
  <% end %>
  <br>  
    <label for="none">New Owner: </label>
    <input type="text" name="new_owner[name]" id="owner_name">
  <br>
  <input type="submit" id="create_owner" value="Update Pet">
</form>


