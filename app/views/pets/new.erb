<h1>Create a new Pet</h1>
<form action="/pets" method="post">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet[name]" id="pet_name"><br>
  <label>Owner:  </label>
  <% @owners.each do |owner| %>
    <input type="radio" name="owner[id]" id="<%= owner.id %>" value="<%= owner.id %>">
    <label for="owner[name]"><%= owner.name %></label>
  <% end %>
  <br>  
    <label for="none">New Owner: </label>
    <input type="text" name="new_owner[name]" id="owner_name">
  <br>

  <input type="submit" id="create_owner" value="Create Pet">
</form>

